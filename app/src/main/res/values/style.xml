<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0D72FF</item>
    </style>
    <style name="booking_main_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="booking_constraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="booking_rating_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="linearLayout_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="booking_details">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="booking_details_2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="info_hotel_textView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RoundedTextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/gray_light</item>
    </style>
</resources>